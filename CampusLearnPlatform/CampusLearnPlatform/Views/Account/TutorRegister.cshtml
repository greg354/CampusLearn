@model CampusLearnPlatform.Models.ViewModels.TutorRegisterViewModel
@{
    ViewData["Title"] = "Tutor Registration";
    Layout = "_AuthLayout";
}

<!-- Select2 CSS for searchable dropdown -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<div class="auth-container">
    <div class="auth-card fade-in-up" style="max-width: 550px;">
        <div class="auth-header">
            <i class="fas fa-chalkboard-teacher fa-3x mb-3"></i>
            <h2>Join as a Tutor</h2>
            <p>Share your knowledge and help students succeed</p>
        </div>

        <div class="auth-body">
            <!-- Switch between Student and Tutor Registration -->
            <div class="alert alert-info d-flex align-items-center justify-content-between mb-4" role="alert" data-persistent="true">
                <div>
                    <i class="fas fa-info-circle me-2"></i>
                    <small>Registering as a student?</small>
                </div>
                <a href="@Url.Action("Register", "Account")" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-user-graduate me-1"></i> Student Registration
                </a>
            </div>

            <form asp-action="TutorRegister" asp-controller="Account" method="post" id="tutorRegisterForm">
                <!-- Personal Information -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">
                                <i class="fas fa-user me-2"></i>First Name
                            </label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">
                                <i class="fas fa-user me-2"></i>Last Name
                            </label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="LastName" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>Belgium Campus Tutor Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="yourname@tutor.belgiumcampus.ac.za" data-email-type="tutor" />
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Expertise" class="form-label">
                        <i class="fas fa-brain me-2"></i>Areas of Expertise
                    </label>
                    <select asp-for="Expertise" class="form-select" id="expertiseSelect" multiple="multiple">
                        @foreach (var area in TutorRegisterViewModel.ExpertiseAreas)
                        {
                            <option value="@area">@area</option>
                        }
                    </select>
                    <span asp-validation-for="Expertise" class="invalid-feedback"></span>
                    <small class="form-text text-muted">
                        <i class="fas fa-lightbulb me-1"></i>Select multiple areas - type to search
                    </small>
                </div>

                <!-- Password Section -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <div class="position-relative">
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Create a strong password" />
                        <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y me-2" onclick="togglePassword('password')" style="border: none; background: none; color: #6c757d;">
                            <i class="fas fa-eye" id="password-toggle-icon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="fas fa-lock me-2"></i>Confirm Password
                    </label>
                    <div class="position-relative">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm your password" />
                        <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y me-2" onclick="togglePassword('confirmPassword')" style="border: none; background: none; color: #6c757d;">
                            <i class="fas fa-eye" id="confirmPassword-toggle-icon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                </div>

                <!-- Terms and Conditions -->
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" />
                        <label asp-for="AcceptTerms" class="form-check-label">
                            I agree to the Tutor Terms and Conditions and Privacy Policy
                        </label>
                        <span asp-validation-for="AcceptTerms" class="invalid-feedback d-block"></span>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100" id="registerBtn">
                        <i class="fas fa-chalkboard-teacher me-2"></i>
                        Register as Tutor
                    </button>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted mb-2">Already have an account?</p>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Sign In
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery (required for Select2) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        // Initialize Select2 for searchable dropdown with multiple selection
        $(document).ready(function() {
            $('#expertiseSelect').select2({
                theme: 'bootstrap-5',
                placeholder: 'Search and select expertise areas...',
                allowClear: true,
                width: '100%',
                multiple: true,
                closeOnSelect: false
            });
        });

        // Password toggle functionality
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(inputId + '-toggle-icon');

            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }

        // Form validation
        document.getElementById('tutorRegisterForm').addEventListener('submit', function(e) {
            const firstName = document.querySelector('[name="FirstName"]').value;
            const lastName = document.querySelector('[name="LastName"]').value;
            const email = document.querySelector('[name="Email"]').value;
            const expertise = $('#expertiseSelect').val(); // Get Select2 value
            const password = document.querySelector('[name="Password"]').value;
            const confirmPassword = document.querySelector('[name="ConfirmPassword"]').value;
            const acceptTerms = document.querySelector('[name="AcceptTerms"]').checked;


            // Password match validation
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match');
                return;
            }

            // Terms acceptance
            if (!acceptTerms) {
                e.preventDefault();
                alert('Please accept the terms and conditions');
                return;
            }
        });
    </script>
}