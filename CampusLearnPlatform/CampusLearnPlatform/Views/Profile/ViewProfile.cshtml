@model CampusLearnPlatform.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = Model.IsMe ? "My Profile" : "Profile";
}

<div class="container dashboard-container">
    <div class="row g-4">
        <!-- LEFT -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-custom">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>@Model.Name</h5>
                </div>
                <div class="card-body text-center">
                    <img src="@(string.IsNullOrWhiteSpace(Model.ProfilePictureUrl) ? "/images/default-profile.png" : Model.ProfilePictureUrl)"
                         alt="Profile picture"
                         style="width:140px;height:140px;object-fit:cover;border-radius:50%;border:2px solid var(--border-color);" />

                    <div class="mt-3">
                        <div class="text-secondary">@Model.Email</div>
                    </div>

                    @if (Model.IsMe)
                    {
                        <div class="d-grid gap-2 mt-4">
                            <a asp-controller="Profile" asp-action="Edit" class="btn btn-outline-primary">
                                <i class="fas fa-pen me-2"></i>Edit Profile
                            </a>
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-light">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- RIGHT -->
        <div class="col-12 col-lg-8">
            <div class="card shadow-custom">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>About</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        @(!string.IsNullOrWhiteSpace(Model.ProfileInfo)
                                                ? Model.ProfileInfo
                                                : "No bio added yet.")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="container mt-3"><div class="alert alert-success">@ok</div></div>
}
@if (TempData["Error"] is string err)
{
    <div class="container mt-3"><div class="alert alert-danger">@err</div></div>
}
