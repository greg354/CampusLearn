@model CampusLearnPlatform.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-body p-4 text-center">
                    <img src="@Model.ProfilePictureUrl" class="rounded-circle mb-3" width="120" height="120" alt="Profile picture" />
                    <h3 class="mb-1">@Model.Name</h3>
                    <p class="text-muted mb-3">@Model.Email</p>

                    @if (!string.IsNullOrWhiteSpace(Model.ProfileInfo))
                    {
                        <p class="mb-4">@Model.ProfileInfo</p>
                    }
                    else
                    {
                        <p class="text-muted mb-4">No profile info yet.</p>
                    }

                    @if (Model.IsMe)
                    {
                        <a asp-action="Edit" asp-controller="Profile" class="btn btn-primary px-4">
                            Edit Profile
                        </a>
                    }
                </div>
            </div>

            @if (TempData["Success"] is string ok)
            {
                <div class="alert alert-success mt-3">@ok</div>
            }
            @if (TempData["Error"] is string err)
            {
                <div class="alert alert-danger mt-3">@err</div>
            }
        </div>
    </div>
</div>
