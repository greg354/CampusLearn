@model CampusLearnPlatform.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h3 class="mb-4">Edit Profile</h3>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email (read-only)</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfileInfo" class="form-label">About me</label>
                            <textarea asp-for="ProfileInfo" rows="5" class="form-control" placeholder="Tell others about yourself…"></textarea>
                            <span asp-validation-for="ProfileInfo" class="text-danger"></span>
                        </div>

                        @* If you later save a picture URL in DB, bind and edit here *@
                        <div class="mb-4">
                            <label class="form-label">Profile Picture URL (optional)</label>
                            <input asp-for="ProfilePictureUrl" class="form-control" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a asp-action="My" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

            @if (TempData["Error"] is string err)
            {
                <div class="alert alert-danger mt-3">@err</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
