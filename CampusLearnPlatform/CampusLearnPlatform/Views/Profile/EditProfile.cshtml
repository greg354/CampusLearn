@model CampusLearnPlatform.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container dashboard-container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-custom">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Edit Profile</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Profile" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        @* Summary (Bootstrap look; uses your alert styles) *@
                        @Html.ValidationSummary(excludePropertyErrors: true, message: null, htmlAttributes: new { @class = "alert alert-danger" })

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Full Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input value="@Model.Email" class="form-control" readonly />
                            <small class="text-secondary">Email can’t be changed.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfileInfo" class="form-label">About / Bio</label>
                            <textarea asp-for="ProfileInfo" class="form-control" rows="5" placeholder="Tell us about yourself…"></textarea>
                            <span asp-validation-for="ProfileInfo" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-controller="Profile" asp-action="My" class="btn btn-light">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (TempData["Error"] is string err)
            {
                <div class="alert alert-danger mt-3">@err</div>
            }
        </div>
    </div>
</div>
