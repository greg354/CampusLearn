<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CampusLearn™</title>

    <!-- Preload Critical Resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Modern Font: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome (CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS - Load after Bootstrap to override -->
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />

    <!-- Favicon (optional) -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>🎓</text></svg>">
</head>
<body>
    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top campus-navbar">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Account")">
                    <i class="fas fa-graduation-cap me-2"></i>CampusLearn™
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Dashboard")">
                                <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Forum")">
                                <i class="fas fa-comments me-1"></i>Forum
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Browse", "Topics")">
                                <i class="fas fa-book me-1"></i>Topics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="showComingSoon('Materials')">
                                <i class="fas fa-folder me-1"></i>Materials
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="showComingSoon('Notifications')">
                                <i class="fas fa-bell me-1"></i>
                                <span class="badge bg-danger rounded-pill" style="font-size: 0.65rem;">3</span>
                            </a>
                        </li>
                        <!-- Theme Toggle Button in Navbar -->
                        <li class="nav-item">
                            <button class="nav-link btn btn-link theme-toggle-navbar"
                                    aria-label="Toggle theme"
                                    onclick="toggleTheme()"
                                    style="border: none; background: none; cursor: pointer; padding: 0.5rem 0.75rem;">
                                <i class="fas fa-moon theme-icon"></i>
                            </button>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#" onclick="showComingSoon('Profile')"><i class="fas fa-user me-2"></i>My Profile</a></li>
                                <li><a class="dropdown-item" href="#" onclick="showComingSoon('Settings')"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white py-4 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5 class="mb-2">
                        <i class="fas fa-graduation-cap me-2"></i>CampusLearn™
                    </h5>
                    <p class="mb-0 text-muted">Empowering Student Success Through Peer-Powered Learning</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="mb-2">
                        <a href="#" onclick="showComingSoon('About'); return false;" class="text-muted text-decoration-none me-3">
                            <small>About</small>
                        </a>
                        <a href="#" onclick="showComingSoon('Help'); return false;" class="text-muted text-decoration-none me-3">
                            <small>Help</small>
                        </a>
                        <a href="@Url.Action("Privacy", "Home")" class="text-muted text-decoration-none me-3">
                            <small>Privacy</small>
                        </a>
                        <a href="#" onclick="showComingSoon('Terms'); return false;" class="text-muted text-decoration-none">
                            <small>Terms</small>
                        </a>
                    </div>
                    <p class="mb-0 text-muted">
                        <small>&copy; 2024 Belgium Campus. All rights reserved.</small>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- AI Chatbot Button (Floating Bottom Right) -->
    <button class="ai-chatbot-toggle" aria-label="Open AI Chatbot" onclick="showComingSoon('AI Chatbot')">
        <i class="fas fa-robot"></i>
    </button>

    <!-- Scripts -->
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>

    <!-- Page-specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Theme Toggle Functionality -->
    <script>
        // Theme toggle function
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            const icon = document.querySelector('.theme-icon');

            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Update icon
            if (newTheme === 'dark') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        }

        // Initialize theme on page load
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            const icon = document.querySelector('.theme-icon');

            document.documentElement.setAttribute('data-theme', savedTheme);

            // Set initial icon
            if (savedTheme === 'dark') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        });

        // Global Coming Soon Function
        if (typeof showComingSoon === 'undefined') {
            function showComingSoon(feature) {
                const modal = document.createElement('div');
                modal.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.7);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    z-index: 2000;
                    backdrop-filter: blur(5px);
                `;

                modal.innerHTML = `
                    <div style="background: white; padding: 2.5rem; border-radius: 1.5rem; text-align: center; max-width: 400px; margin: 1rem; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
                        <div style="width: 80px; height: 80px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-rocket fa-3x" style="color: white;"></i>
                        </div>
                        <h4 style="margin-bottom: 1rem; font-weight: 700;">${feature} Coming Soon!</h4>
                        <p style="color: #6c757d; margin-bottom: 1.5rem;">This exciting feature is currently under development.</p>
                        <button onclick="this.closest('div').closest('div').remove()" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); color: white; border: none; padding: 0.75rem 2rem; border-radius: 0.5rem; font-weight: 600; cursor: pointer;">
                            <i class="fas fa-check me-2"></i>Got It
                        </button>
                    </div>
                `;

                document.body.appendChild(modal);
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) modal.remove();
                });
            }
        }
    </script>

    <style>
        /* Theme Toggle Button Styling in Navbar */
        .theme-toggle-navbar {
            color: rgba(255, 255, 255, 0.8) !important;
            transition: all 0.3s ease;
        }

            .theme-toggle-navbar:hover {
                color: rgba(255, 255, 255, 1) !important;
                transform: rotate(180deg);
            }

        .theme-icon {
            font-size: 1.1rem;
        }

        /* AI Chatbot Button - Bottom Right - FIXED CSS */
        .ai-chatbot-toggle {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            color: white;
            border: none;
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
            cursor: pointer;
            z-index: 1000;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

            .ai-chatbot-toggle:hover {
                transform: scale(1.1);
                box-shadow: 0 15px 40px rgba(99, 102, 241, 0.6);
            }

            .ai-chatbot-toggle:active {
                transform: scale(0.95);
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .ai-chatbot-toggle

        {
            width: 50px;
            height: 50px;
            bottom: 1.5rem;
            right: 1.5rem;
            font-size: 1.2rem;
        }

        }
    </style>
</body>
</html>
