<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CampusLearn™</title>

    <!-- Preload Critical Resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Modern Font: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome (CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>🎓</text></svg>">
</head>
<body>
    <!-- Minimal Authentication Header -->
    <header>
        <nav class="navbar navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Login", "Account")">
                    <i class="fas fa-graduation-cap me-2 text-primary" style="font-size: 1.5rem;"></i>
                    <span class="text-primary">CampusLearn™</span>
                </a>

                <!-- Theme Toggle Button -->
                <button class="btn btn-link text-decoration-none theme-toggle-auth"
                        aria-label="Toggle theme"
                        onclick="toggleTheme()"
                        style="border: none; background: none; cursor: pointer;">
                    <i class="fas fa-moon theme-icon text-muted" style="font-size: 1.2rem;"></i>
                </button>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="main-content" style="min-height: calc(100vh - 180px);">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white py-4 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5 class="mb-2">
                        <i class="fas fa-graduation-cap me-2"></i>CampusLearn™
                    </h5>
                    <p class="mb-0 text-muted">Empowering Student Success Through Peer-Powered Learning</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="mb-2">
                        <a href="#" onclick="showComingSoon('About'); return false;" class="text-muted text-decoration-none me-3">
                            <small>About</small>
                        </a>
                        <a href="#" onclick="showComingSoon('Help'); return false;" class="text-muted text-decoration-none me-3">
                            <small>Help</small>
                        </a>
                        <a href="@Url.Action("Privacy", "Home")" class="text-muted text-decoration-none me-3">
                            <small>Privacy</small>
                        </a>
                        <a href="#" onclick="showComingSoon('Terms'); return false;" class="text-muted text-decoration-none">
                            <small>Terms</small>
                        </a>
                    </div>
                    <p class="mb-0 text-muted">
                        <small>&copy; 2024 Belgium Campus. All rights reserved.</small>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>

    <!-- Page-specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Theme Toggle Functionality -->
    <script>
        // Theme toggle function
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            const icon = document.querySelector('.theme-icon');

            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Update icon
            if (newTheme === 'dark') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        }

        // Initialize theme on page load
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            const icon = document.querySelector('.theme-icon');

            document.documentElement.setAttribute('data-theme', savedTheme);

            // Set initial icon
            if (savedTheme === 'dark') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        });

        // Global Coming Soon Function
        if (typeof showComingSoon === 'undefined') {
            function showComingSoon(feature) {
                const modal = document.createElement('div');
                modal.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.7);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    z-index: 2000;
                    backdrop-filter: blur(5px);
                `;

                modal.innerHTML = `
                    <div style="background: white; padding: 2.5rem; border-radius: 1.5rem; text-align: center; max-width: 400px; margin: 1rem; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
                        <div style="width: 80px; height: 80px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-rocket fa-3x" style="color: white;"></i>
                        </div>
                        <h4 style="margin-bottom: 1rem; font-weight: 700;">${feature} Coming Soon!</h4>
                        <p style="color: #6c757d; margin-bottom: 1.5rem;">This exciting feature is currently under development.</p>
                        <button onclick="this.closest('div').closest('div').remove()" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); color: white; border: none; padding: 0.75rem 2rem; border-radius: 0.5rem; font-weight: 600; cursor: pointer;">
                            <i class="fas fa-check me-2"></i>Got It
                        </button>
                    </div>
                `;

                document.body.appendChild(modal);
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) modal.remove();
                });
            }
        }
    </script>

    <style>
        /* Auth Header Styling */
        .navbar-light .navbar-brand:hover {
            opacity: 0.8;
        }

        .theme-toggle-auth {
            transition: all 0.3s ease;
        }

            .theme-toggle-auth:hover {
                transform: rotate(180deg);
            }

        .theme-icon {
            font-size: 1.2rem;
            transition: all 0.3s ease;
        }

        /* Auth Container Styling */
        .main-content {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        /* Footer positioning for auth pages */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .navbar-brand

        {
            font-size: 1.25rem;
        }

        .main-content {
            padding-top: 1rem;
        }

        }
    </style>
</body>
</html>
